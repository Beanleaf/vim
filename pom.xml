<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>vim</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.8.0</version>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <tagNameFormat>v@{project.version}</tagNameFormat>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>2.5.3</version>
      </plugin>
      <plugin>
        <artifactId>libsass-maven-plugin</artifactId>
        <configuration>
          <generateSourceMap>false</generateSourceMap>
          <inputPath>${scss.path.source}</inputPath>
          <outputPath>${scss.path.target}</outputPath>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
            </goals>
            <phase>generate-resources</phase>
          </execution>
        </executions>
        <groupId>com.github.warmuuh</groupId>
        <version>0.2.10-libsass_3.5.3</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <artifactId>spring-boot-starter-test</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>junit-vintage-engine</artifactId>
          <groupId>org.junit.vintage</groupId>
        </exclusion>
      </exclusions>
      <groupId>org.springframework.boot</groupId>
      <scope>test</scope>
    </dependency>
    <!-- hot swapping, disable cache for template, enable live reload -->
    <dependency>
      <artifactId>spring-boot-devtools</artifactId>
      <groupId>org.springframework.boot</groupId>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <distributionManagement>
    <site>
      <id>gh-pages</id>
      <url>${scm.url}</url>
    </site>
  </distributionManagement>
  <groupId>be.vizit</groupId>

  <modelVersion>4.0.0</modelVersion>

  <modules>
    <module>vim-domain</module>
    <module>vim-persistence</module>
    <module>vim-services</module>
    <module>vim-web</module>
  </modules>

  <packaging>pom</packaging>

  <parent>
    <artifactId>spring-boot-starter-parent</artifactId>
    <groupId>org.springframework.boot</groupId>
    <relativePath/>
    <version>2.2.1.RELEASE</version> <!-- lookup parent from repository -->
  </parent>

  <properties>
    <java.version>1.8</java.version>
    <scm.connection>scm:git:https://github.com/mathiasbosman/vim.git</scm.connection>
    <scm.url>https://github.com/mathiasbosman/vim</scm.url>
    <scss.path.source>src/main/resources/assets/scss/</scss.path.source>
    <scss.path.target>src/main/resources/static/css/</scss.path.target>
  </properties>

  <scm>
    <connection>${scm.connection}</connection>
    <developerConnection>${scm.connection}</developerConnection>
    <tag>HEAD</tag>
    <url>${scm.url}</url>
  </scm>

  <version>0.0.2-SNAPSHOT</version>
</project>